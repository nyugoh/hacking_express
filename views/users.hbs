<div class="container">
  {{#if users}}
    <h3>Hackers for the weekend</h3>
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Name</th>
          <th>aka</th>
          <th>Country</th>
          <th>Points</th>
          <th>Total Hacks</th>
          <th>Date Joined</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td><a href="/users/{{username}}">{{fullName}}</a></td>
            <td>{{displayName}}</td>
            <td>{{country}}</td>
            <td>{{points}}</td>
            <td>{{points}}</td>
            <td>{{createdOn}}</td>
            <td class="action">
              <span class="octicon octicon-git-merge"> Join</span>
              <span class="octicon octicon-comment-discussion"> Inbox</span>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="alert alert-info">
      <h4>There are no hackers</h4>
      <p>Be the first hacker</p>
    </div>
    <a href="/users/login" class="btn btn-info">Login</a>
    <a href="/users/signup" class="btn btn-success">Signup</a>
  {{/if}}
</div>
